# Collision Detection Test
# Tests that player stops when hitting a wall
# Expected: Player moves right, then stops at wall (position stops changing)

console = "zx"
seed = 0
players = 1

frames = [
  # Initial position - capture starting X
  { f = 0, p1 = "idle", snap = true },

  # Start moving right
  { f = 1, p1 = "right" },
  { f = 10, p1 = "right", snap = true },

  # Continue moving - position should increase
  { f = 20, p1 = "right", snap = true },
  { f = 30, p1 = "right", snap = true },

  # Near wall - position still increasing
  { f = 50, p1 = "right", snap = true },

  # At wall - position should stop changing
  { f = 60, p1 = "right", snap = true },

  # Still pressing right - position unchanged (blocked by wall)
  { f = 70, p1 = "right", snap = true },
  { f = 80, p1 = "right", snap = true },

  # Final state - verify blocked
  { f = 90, p1 = "right", snap = true },
]
